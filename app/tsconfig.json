{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["./assets/js/**/*"],
  "exclude": ["./node_modules/*", "public/*"],
  "compilerOptions": {
    "module": "esNext",
    "target": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./assets/js/*"],
      "@public/*": ["./public/*"],
    }
  },
  "strict": true,
  "noImplicitAny": false
}
