{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["assets/js/**/*"],
  "exclude": ["./node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "module": "esNext",
    "target": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./assets/js/*"]
    }
  },
  "strict": true,
  "noImplicitAny": false
}
