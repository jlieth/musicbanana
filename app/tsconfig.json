{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["./assets/js/**/*"],
  "exclude": ["./node_modules/*", "./public/*"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./assets/js/*"],
      "@public/*": ["./public/*"],
    }
  },
  "strict": true,
  "noImplicitAny": false
}
